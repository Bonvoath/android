<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorWhite"/>
            <stroke android:color="@color/colorInfo" android:width="1px"/>
            <corners android:radius="3px"/>
            <padding android:bottom="10px" android:left="15px" android:right="15px" android:top="10px"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#f2f2f2"/>
            <stroke android:color="#ddd" android:width="1px"/>
            <corners android:radius="3px"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorWhite"/>
            <stroke android:color="#ddd" android:width="1px"/>
            <corners android:radius="3px"/>
            <padding android:bottom="10px" android:left="15px" android:right="15px" android:top="10px"/>
        </shape>
    </item>
</selector>